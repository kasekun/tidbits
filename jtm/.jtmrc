# Default session settings
# These will be used as defaults when creating new launchers
DEFAULT_SESSION_PREFIX="dev-"
DEFAULT_WINDOW_NAME="main"

# Appearance settings
SHOW_DESCRIPTIONS=true
SHOW_TAGS=false

# Behavior settings
AUTO_ATTACH=true         # Automatically attach to sessions after creation
CONFIRM_KILL=true        # Confirm before killing sessions
DEFAULT_ACTION="attach"  # Default action when session exists: "attach", "kill", or "prompt"

# Advanced tmux settings
# These will be applied to new sessions
TMUX_DEFAULT_TERMINAL="tmux-256color"
TMUX_MOUSE_MODE=on
TMUX_BASE_INDEX=1
TMUX_PANE_BASE_INDEX=1

